<link href="~/css/AppVersion.css" rel="stylesheet" asp-append-version="true" />
<script src="~/js/AppVersion.js" asp-append-version="true" defer></script>

<form class="p-3">
    <div class="row">
        <div class="col">
            <label for="AppCategory" class="form-label">App類別</label>
            <select id="AppCategory" class="form-select">
                <option value="" disabled selected>請選擇</option>
                <option value="Action">行動SafeGo</option>
                <option value="Take">隨身SafeGo</option>
            </select>
        </div>
        <div class="col">
            <label for="OS" class="form-label">作業系統</label>
            <select id="OS" class="form-select">
                <option value="" disabled selected>請選擇</option>
                <option value="A">Android</option>
                <option value="I">IOS</option>
            </select>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col text-end">
            <button type="reset" class="btn btn-outline-dark">重置</button>
            <button type="button" class="btn btn-primary">查詢</button>
        </div>
    </div>
</form>

<div class="table-responsive mt-3 p-3" id="AppTable">
    <table class="table text-center">
        <thead>
            <tr>
                <th>App類別</th>
                <th>作業系統</th>
                <th>強制版更</th>
                <th>App版本</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>行動SafeGo</td>
                <td>Android</td>
                <td>Y</td>
                <td>1.01.20240709</td>
                <td>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AppModal" id="edit">編輯</button>
                </td>
            </tr>
            <tr>
                <td>行動SafeGo</td>
                <td>IOS</td>
                <td>Y</td>
                <td>1.01.20240709</td>
                <td>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#AppModal" id="edit">編輯</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="modal fade" id="AppModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">編輯</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row mb-3">
                        <div class="col-md-6 mt-3">
                            <label for="orderNumber" class="form-label">清單編號</label>
                            <input type="text" class="form-control" id="orderNumber" disabled>
                        </div>
                        <div class="col-md-6 mt-3">
                            <label for="appName" class="form-label">App類別</label>
                            <input type="text" class="form-control" id="appName" disabled>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="os" class="form-label">作業系統</label>
                            <input type="text" class="form-control" id="os" disabled>
                        </div>
                        <div class="col-md-6">
                            <label for="appVersion" class="form-label">App版本</label>
                            <input type="text" class="form-control" id="appVersion" placeholder="請輸入">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">是否強制版更</label><br>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="forceUpdate" id="forceYes" value="yes" checked>
                            <label class="form-check-label" for="forceYes">是</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="forceUpdate" id="forceNo" value="no">
                            <label class="form-check-label" for="forceNo">否</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-dark">新增</button>
            </div>
        </div>
    </div>
</div>