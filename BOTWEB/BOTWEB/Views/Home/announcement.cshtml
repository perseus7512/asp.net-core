<!-- 引入必要的脚本和样式 -->
<script src="~/js/announcement.js" asp-append-version="true"></script>
<link href="~/css/announcement.css" rel="stylesheet" asp-append-version="true" />

<!-- 表单部分 -->
<form class="p-3">
    <div class="row">
        <div class="col">
            <label for="userCategory" class="form-label">用戶類別</label>
            <select id="userCategory" class="form-select">
                <option value="" disabled selected>請選擇</option>
                <option value="P">個人網銀</option>
                <option value="C">e企合成網</option>
            </select>
        </div>
        <div class="col">
            <label for="subject" class="form-label">主旨</label>
            <input type="text" class="form-control" id="subject" placeholder="請選擇">
        </div>
        <div class="col">
            <label for="daterange" class="form-label">起訖日期</label>
            <input type="text" id="daterange" name="daterange" class="form-control" placeholder="請選擇" />
        </div>
    </div>
    <div class="row mt-3">
        <div class="col text-end">
            <button type="reset" class="btn btn-outline-dark">重置</button>
            <button type="button" class="btn btn-primary">查詢</button>
        </div>
    </div>
</form>

<div id="announcement">
    <!-- 标签页部分 -->
    <div class="d-flex align-items-center justify-content-between mt-4 pt-3 border-custom px-3">
        <div class="tab-container">
            <div class="tab active" onclick="openForm(event, 'form1')">公告列表</div>
            <div class="tab" onclick="openForm(event, 'form2')">草稿區</div>
        </div>
        <!-- 新增公告按鈕 -->
        <button class="btn btn-success mb-2" onclick="location.href='@Url.Action("announcement_create", "Home")';">新增公告</button>
    </div>

    <!-- 公告列表内容 -->
    <div id="form1" class="form-container active mt-3 px-2">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>用戶類別</th>
                        <th>公告對象</th>
                        <th>公告等級</th>
                        <th>公告主旨</th>
                        <th>公告期間</th>
                        <th>目前狀態</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr onclick="toggleContent('content1')">
                        <td>個人網銀</td>
                        <td>APP</td>
                        <td>重要</td>
                        <td>測試測試</td>
                        <td>2024-08-06 ~ 2024-08-30</td>
                        <td>已覆核</td>
                        <td><span class="arrow">▼</span></td>
                    </tr>
                    <tr id="content1" class="collapse">
                        <td colspan="7" class="p-0">
                            <div class="text-start" style="padding-left: 4%; width: 100%;">
                                <strong>公告內文：</strong><br />
                                這是公告 1 的內容。這裡可以顯示詳細的公告訊息。
                            </div>
                        </td>
                    </tr>
                    <tr onclick="toggleContent('content2')">
                        <td>個人網銀</td>
                        <td>APP</td>
                        <td>重要</td>
                        <td>測試測試</td>
                        <td>2024-08-06 ~ 2024-08-30</td>
                        <td>已覆核</td>
                        <td><span class="arrow">▼</span></td>
                    </tr>
                    <tr id="content2" class="content">
                        <td colspan="7">這是公告 2 的內容。這裡可以顯示詳細的公告訊息。</td>
                    </tr>
                    <tr onclick="toggleContent('content3')">
                        <td>個人網銀</td>
                        <td>APP</td>
                        <td>重要</td>
                        <td>測試測試</td>
                        <td>2024-08-06 ~ 2024-08-30</td>
                        <td>已覆核</td>
                        <td><span class="arrow">▼</span></td>
                    </tr>
                    <tr id="content3" class="content">
                        <td colspan="7">這是公告 3 的內容。這裡可以顯示詳細的公告訊息。</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <!-- 草稿區内容 -->
    <div id="form2" class="form-container mt-3" style="display: none;">
        <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>用戶類別</th>
                        <th>公告對象</th>
                        <th>公告等級</th>
                        <th>公告主旨</th>
                        <th>公告期間</th>
                        <th>目前狀態</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr onclick="toggleContent('content4')">
                        <td>個人網銀</td>
                        <td>APP</td>
                        <td>重要</td>
                        <td>測試測試</td>
                        <td>2024-08-06 ~ 2024-08-30</td>
                        <td>已覆核</td>
                        <td><span class="arrow">▼</span></td>
                    </tr>
                    <tr id="content4" class="content">
                        <td colspan="7">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>公告內文<br />這是公告 1 的內容。這裡可以顯示詳細的公告訊息。</span>
                                <div class="text-end">
                                    <button type="button" class="btn btn-primary">修改</button>
                                    <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">刪除</button>
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr onclick="toggleContent('content5')">
                        <td>個人網銀</td>
                        <td>APP</td>
                        <td>重要</td>
                        <td>測試測試</td>
                        <td>2024-08-06 ~ 2024-08-30</td>
                        <td>已覆核</td>
                        <td><span class="arrow">▼</span></td>
                    </tr>
                    <tr id="content5" class="content">
                        <td colspan="7">這是公告 2 的內容。這裡可以顯示詳細的公告訊息。</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered d-flex justify-content-center">
        <!-- 添加 modal-dialog-centered 和 justify-content-center -->
        <div class="modal-content">
            <div class="modal-body text-center">
                刪除草稿<br />確定要刪除此草稿?
            </div>
            <div class="modal-footer d-flex justify-content-center">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                <button type="button" class="btn btn-primary">確定</button>
            </div>
        </div>
    </div>
</div>