<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <link href="~/css/layout.css" rel="stylesheet" />
</head>
<body>
    <div class="wrapper">
        <aside class="sidebar" id="sidebar">
            <button class="close-btn" id="closeBtn">&#9664;</button> <!-- 向右箭頭 -->
            <h2>側邊欄</h2>
            <ul>
                <li>
                    <div class="dropdown" onclick="toggleDropdown(1)">
                        <span>選項 1</span>
                        <span class="arrow" id="arrow1">&#9660;</span>
                    </div>
                    <ul class="dropdown-content" id="dropdownContent1">
                        <li class="chat-item"><a href="#">子選項 1-1</a></li>
                        <li class="chat-item"><a href="#">子選項 1-2</a></li>
                    </ul>
                </li>
                <li>
                    <div class="dropdown" onclick="toggleDropdown(2)">
                        <span>選項 2</span>
                        <span class="arrow" id="arrow2">&#9660;</span>
                    </div>
                    <ul class="dropdown-content" id="dropdownContent2">
                        <li class="chat-item"><a href="#">子選項 2-1</a></li>
                        <li class="chat-item"><a href="#">子選項 2-2</a></li>
                    </ul>
                </li>
                <li><a href="#">選項 3</a></li>
            </ul>
        </aside>
        <main class="main-content">
            <div class="toolbar">
                <a id="content-title">內容</a>
                <button class="share">台銀</button>
                <button class="account">帳戶</button>
            </div>
            <div class="chat-content">
                <!-- 這裡可以放置更多內容 -->
                @RenderBody()
            </div>
        </main>
        <button class="open-btn" id="openBtn">&#9654;</button> <!-- 向右箭頭 -->
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/layout.js"></script>
        @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>
